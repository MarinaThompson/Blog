@model IEnumerable<Post>

@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/home.css" />

<header>
    <nav style="margin-bottom:10px;">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Posts" asp-action="CreatePost">Create post</a>
        <a asp-controller="Posts" asp-action="MyPosts">My posts</a>
        <a asp-controller="Users" asp-action="Logout">Logout</a>
    </nav>
</header>

<div class="flex-align">
    <div class="container span7 text-center col-md-4 col-md-offset-3" style="margin: 0 auto;float: none;">
        <div class="row">
            @foreach (var post in Model)
            {
                var image_path = $"/images/posts/{post.Image}";

                <div class="card" style="width: 18rem; margin-bottom: 10px;">
                    <img class="card-img-top" src="@image_path" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">@post.Subtitle</p>
                    </div>
                </div>
                <br />
                <br />
            }
        </div>
    </div>
</div>